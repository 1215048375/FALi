{
  "manifest_version": 2,
  "name": "淘宝省钱助手",
  "description": "本插件可以实时显示您浏览的商品的返利信息，使用您自己的帐号登陆阿里妈妈生成返利链接可最大限度的省钱！其实，你可以省下一座山！请使用淘宝省钱助手。",
  "version": "1.0.0",
  "permissions": [
    "<all_urls>","contextMenus","tabs","storage","cookies","notifications","alarms","activeTab"
  ],
  "background": {
    "scripts": ["js/jquery.min.js","js/background.js"]
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "淘宝省钱助手",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
	{
		"matches": [
        "*://item.taobao.com/*",
				"*://world.taobao.com/*",
				"*://detail.tmall.com/*",
				"*://world.tmall.com/*",
				"*://detail.ju.taobao.com/*",
				"*://detail.yao.95095.com/*",
        "*://shop.m.taobao.com/*",
				"*://chaoshi.detail.tmall.com/*",
				"*://detail.tmall.hk/*",
				"*://items.alitrip.com/*",
				"*://hotel.alitrip.com/*",
				"*://item.alitrip.com/*",
				"*://detail.alitrip.com/*",
        "*://detail.alitrip.hk/*",
				"*://taoquan.taobao.com/*",
        "*://tuan.alitrip.com/*"
    ],
		"js": [
        "js/jquery.min.js",
        "js/highcharts.js",
        "js/react.min.js",
        "js/react-dom.min.js",
        "js/react-with-addons.min.js",
        "js/browser.min.js",
        "js/content.js"],
		"css": ["css/style.css"]
	}]
}
